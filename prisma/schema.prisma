generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Analysis {
  id         String   @id @default(uuid())
  text       String
  summary    String
  riskScore  Float
  sentiment  String
  confidence Float
  opportunityScore Float @default(0)
  topics     String[] // Postgres array
  createdAt  DateTime @default(now())

  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  analyses  Analysis[]
  properties Property[] 
  createdAt DateTime @default(now())
}


model Property {
  id        Int      @id @default(autoincrement())
  name      String
  city      String
  latitude  Float
  longitude Float
  value     Float
  riskScore Float
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}


