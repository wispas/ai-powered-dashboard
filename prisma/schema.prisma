generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Analysis {
  id         String   @id @default(uuid())
  text       String
  summary    String
  riskScore  Float
  sentiment  String
  confidence Float
  topics     String[] // Postgres array
  createdAt  DateTime @default(now())
}
